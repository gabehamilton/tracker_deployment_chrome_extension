{
  "manifest_version": 2,
  "name": "Deploy Spy: Pivotal Tracker Deployment Tracking",
  "description": "This extension adds data to Pivotal Tracker stories showing what environments they have been deployed to",
  "version": "0.1",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Configure Deploy Spy"
  },
  "options_page": "options.html",
  "content_scripts": [ {
    "js": [ "jquery-2.1.3.min.js", "underscore-min.js", "insert.js" ],
    "matches": [ "http://*/*", "https://*/*"],
    "css": ["deploy_spy.css"]
  }],
  "permissions": [
    "storage",
    "activeTab",
    "https://ajax.googleapis.com/",
    "http://*/"
  ],
  "web_accessible_resources": [
    "underscore-min.js",
    "underscore-min.map"
  ]
}